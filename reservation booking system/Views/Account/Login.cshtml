@using reservation_booking_system.ViewModels
@model LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .form-group {
        margin-top: 2rem;
    }
    .input-group {
        width: 80%;
    }
    .input-group > .form-control{
        width:inherit;
    }
    .validation-summary-errors ul li{
        color:red;
    }
</style>

<h2 class="mt-4">Login Account</h2>

<div class="authentication-form">
    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <div class="input-group">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email / UserName", Styles = "padding-top:10px" })
                <br />
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="input-group">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                <br />
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
        </div>
        @Html.ValidationSummary(true)
        <button type="submit" class="btn btn-info mt-3">Sign In</button>
    }
    
</div>
